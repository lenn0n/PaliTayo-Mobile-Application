<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/my_items_delete"
        android:layout_width="31dp"
        android:layout_height="27dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_delete_forever_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_edit_label"
        app:layout_constraintStart_toEndOf="@+id/my_edit_label"
        app:layout_constraintTop_toTopOf="@+id/my_edit_label"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/my_item_status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="ITEM_STATUS"
        app:layout_constraintStart_toStartOf="@+id/my_item_name"
        app:layout_constraintTop_toBottomOf="@+id/my_item_name" />

    <ImageView
        android:id="@+id/my_items_picture"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:text="ITEM_NAME"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/my_items_picture"
        app:layout_constraintTop_toTopOf="@+id/my_items_picture" />

    <ImageView
        android:id="@+id/my_items_edit"
        android:layout_width="29dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_mode_edit_black_24dp"
        app:layout_constraintStart_toEndOf="@+id/my_items_picture"
        app:layout_constraintTop_toBottomOf="@+id/my_item_status" />

    <TextView
        android:id="@+id/my_edit_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/my_items_edit"
        app:layout_constraintStart_toEndOf="@+id/my_items_edit"
        app:layout_constraintTop_toTopOf="@+id/my_items_edit" />

    <TextView
        android:id="@+id/my_delete_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/my_items_delete"
        app:layout_constraintStart_toEndOf="@+id/my_items_delete"
        app:layout_constraintTop_toTopOf="@+id/my_items_delete" />

    <ImageView
        android:id="@+id/my_items_picture2"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:background="@drawable/frame"
        android:backgroundTint="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="@+id/my_items_picture"
        app:layout_constraintEnd_toEndOf="@+id/my_items_picture"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="@+id/my_items_picture"
        app:layout_constraintTop_toTopOf="@+id/my_items_picture" />
</android.support.constraint.ConstraintLayout>