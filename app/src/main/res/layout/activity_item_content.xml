                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/frame"
                android:backgroundTint="@color/colorBackground"
                app:layout_constraintBottom_toBottomOf="@+id/loadPostPicture"
                app:layout_constraintEnd_toEndOf="@+id/loadPostPicture"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/loadPostPicture"
                app:layout_constraintTop_toTopOf="@+id/loadPostPicture"
